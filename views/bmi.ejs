<div
    class="flex min-h-screen flex-col justify-center items-center px-4 py-8 bg-gradient-to-br from-indigo-100 to-purple-100"
>
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-8">
        <h1
            class="text-3xl sm:text-4xl font-main mb-6 text-center text-indigo-600"
        >
            BMI Calculator
        </h1>
        <form id="bmi-form" class="space-y-4 font-second">
            <div class="flex flex-col sm:flex-row sm:space-x-4">
                <div class="flex-1 mb-4 sm:mb-0">
                    <label
                        for="weight"
                        class="block text-md font-bold text-gray-700 mb-1"
                        >Weight (kg)</label
                    >
                    <input
                        id="weight"
                        type="number"
                        placeholder="e.g., 70.5"
                        required
                        class="w-full p-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                        step="0.1"
                    />
                </div>
                <div class="flex-1">
                    <label
                        for="height"
                        class="block text-md font-bold text-gray-700 mb-1"
                        >Height (m)</label
                    >
                    <input
                        id="height"
                        type="number"
                        placeholder="e.g., 1.75"
                        required
                        class="w-full p-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                        step="0.01"
                    />
                </div>
            </div>
            <button
                type="submit"
                class="w-full bg-indigo-600 text-white p-3 rounded-md hover:bg-indigo-700 transition-colors font-semibold text-lg"
            >
                Calculate BMI
            </button>
        </form>
        <div id="error-message" class="mt-4 text-red-500 text-center"></div>
        <div id="bmiResult" class="mt-4 font-second text-center text-lg"></div>
        <div
            id="category"
            class="mt-2 font-second text-center text-lg font-semibold"
        ></div>
    </div>
    <a
        href="/"
        class="mt-8 font-second text-xl text-indigo-600 hover:text-indigo-800 transition-colors"
    >
        Go back
    </a>
</div>

<script type="module" src="/js/bmi.js"></script>
